{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/post.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}

  <div class=" py-5 bg-light">
    <div class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        <h3 class="pb-3 mb-4 font-italic border-bottom">
          From the Firehose
        </h3>

        <div class="blog-post">
          <h2 class="blog-post-title">{{ post.title }}</h2>
          <p class="blog-post-meta">January 1, 2014 by <a href="mailto:{{ post.user.email }}">{{ post.user.username }}</a></p>
          <hr>
          <p>{{ post.body }}</p>
        </div><!-- /.blog-post -->

      </div><!-- /.blog-main -->

      <aside class="col-md-4 blog-sidebar">
        <div class="p-3 mb-3 bg-light rounded">
          <h4 class="font-italic">About {{ post.user.username }}</h4>
          <p class="mb-0">{{ post.user.username }} (real name: {{ post.user.name }}) is the owner of <a href="mailto:{{ post.user.website }}">{{ post.user.website }}</a>. You can get in touch by sending an email to <a href="mailto:{{ post.user.email }}">{{ post.user.email }}</a> or by calling {{ post.user.phone }}.</p>
        </div>

        <div class="p-3">
          <h4 class="font-italic">Others</h4>
          <ol class="list-unstyled mb-0">
            {% for post in posts %}
            <li><a href="{{ path('posts_show', {id: post.id }) }}">{{ post.title }}</a></li>
            {% endfor %}
          </ol>
        </div>

        <div class="p-3">
          <h4 class="font-italic">Elsewhere</h4>
          <ol class="list-unstyled">
            <li><a href="#">GitHub</a></li>
            <li><a href="#">Twitter</a></li>
            <li><a href="#">Facebook</a></li>
          </ol>
        </div>
      </aside><!-- /.blog-sidebar -->

    </div><!-- /.row -->
    </div>
    </div>
{% endblock %}